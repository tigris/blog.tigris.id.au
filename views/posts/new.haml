%h1 Submit a new post
%form#post{method: :post, action: '/posts/new'}
  %ul
    %li#title
      %label{for: :post_title} Title:
      %input{type: :text, id: :post_title, name: :title}
    %li#tags
      %label{for: :post_tags} Tags:
      %input{type: :text, id: :post_tags, name: :tags}
    %li#content
      %label{for: :post_summary} Summary:
      %textarea{id: :post_summary, name: :summary, cols: 80, rows: 15}= ''
    %li#content
      %label{for: :post_content} Content:
      %textarea{id: :post_content, name: :content, cols: 80, rows: 15}= ''
  %input{type: :submit, value: 'Post!'}
