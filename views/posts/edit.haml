%h1 Edit a post
%form#post{method: :post, action: url_for(:update, @post)}
  %input{type: :hidden, name: '_method', value: :put}
  %ul
    %li#title
      %label{for: :post_title} Title:
      %input{type: :text, id: :post_title, name: :title, value: @post.title}
    %li#tags
      %label{for: :post_tags} Tags:
      %input{type: :text, id: :post_tags, name: :tags, value: @post.tags.to_a.join(' ')}
    %li#summary
      %label{for: :post_summary} Summary:
      %textarea{id: :post_summary, name: :summary, cols: 80, rows: 10}= @post.summary
    %li#content
      %label{for: :post_content} Content:
      %textarea{id: :post_content, name: :content, cols: 80, rows: 15}= @post.content
  %input{type: :submit, value: 'Save post.'}
